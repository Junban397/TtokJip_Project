<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="개인정보 처리방침"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:paddingBottom="16dp" />

        <!-- 1번 항목 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. 개인정보 수집"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="8dp" />
        <TextView
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="본 서비스는 사용자의 식별을 위해 최소한의 개인정보를 수집합니다. 수집 정보는 이름, 이메일, 집 ID 등이 포함됩니다."
            android:textSize="16sp"
            android:lineSpacingExtra="4dp" />

        <!-- 2번 항목 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2. 개인정보 사용"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="8dp" />
        <TextView
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="수집된 정보는 스마트홈 관리 및 데이터 시각화를 위한 목적으로만 사용됩니다. 추가 사용이 필요한 경우 사전에 동의를 요청합니다."
            android:textSize="16sp"
            android:lineSpacingExtra="4dp" />

        <!-- 3번 항목 -->
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3. 데이터 보안"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="8dp" />
        <TextView
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="사용자의 개인정보는 안전한 서버에 저장되며, 비인가 접근으로부터 보호됩니다."
            android:textSize="16sp"
            android:lineSpacingExtra="4dp" />

        <!-- 4번 항목 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4. 데이터 공유"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="8dp" />
        <TextView
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="사용자의 동의 없이 개인정보를 외부 기관과 공유하지 않으며, 법적 요구 사항에 따라 필요한 경우를 제외합니다."
            android:textSize="16sp"
            android:lineSpacingExtra="4dp" />
    </LinearLayout>
</ScrollView>