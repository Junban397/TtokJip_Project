<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.StatisticsView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/a1009_3"
            android:lineSpacingExtra="8dp"
            android:text="똑.집\n통  계"
            android:textColor="@color/black"
            android:textSize="28sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/a1009_3"
            android:text="우리집 전기 사용량"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/text_view_stroke_rounded"
            android:fontFamily="@font/a1009_2"
            android:gravity="center"
            android:text="테스트"
            android:textSize="22dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-2dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:background="@drawable/text_view_stroke"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:fontFamily="@font/a1009_2"
                    android:gravity="center|left"
                    android:padding="4dp"
                    android:text="테스트"
                    android:textSize="16dp" />

                <TextView
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:fontFamily="@font/a1009_3"
                    android:gravity="center|left"
                    android:padding="4dp"
                    android:text="테스트"
                    android:textSize="24dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:fontFamily="@font/a1009_2"
                    android:gravity="center|left"
                    android:padding="4dp"
                    android:text="테스트"
                    android:textSize="18dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/text_view_stroke"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:fontFamily="@font/a1009_2"
                    android:gravity="center|left"
                    android:padding="4dp"
                    android:text="테스트"
                    android:textSize="16dp" />

                <TextView
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:fontFamily="@font/a1009_3"
                    android:gravity="center|left"
                    android:padding="4dp"
                    android:text="테스트"
                    android:textSize="24dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:fontFamily="@font/a1009_2"
                    android:gravity="center|left"
                    android:padding="4dp"
                    android:text="테스트"
                    android:textSize="18dp" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/a1009_3"
            android:text="7일 온습도 그래프"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <com.github.mikephil.charting.charts.LineChart
            android:background="@drawable/text_view_stroke"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="253dp" />
    </LinearLayout>

</FrameLayout>