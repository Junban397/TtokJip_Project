<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" />
    <uses-permission android:name="android.permission.BLUETOOTH_SCAN" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ttokjib_icon"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@drawable/ttokjib_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.TtokJip"
        tools:targetApi="31">
        <activity
            android:name=".ui.DeviceSettingDialog"
            android:exported="false" />
        <activity
            android:name=".ui.PrivacyPolicy"
            android:exported="false" />
        <activity
            android:name=".ui.TermsOfService"
            android:exported="false" />
        <activity
            android:name=".ui.MenuMyPage"
            android:exported="false" />
        <activity
            android:name=".ui.SearchDevice"
            android:exported="false" />
        <activity
            android:name=".login.LoginMain"
            android:exported="false" />
        <activity
            android:name=".ui.DeviceManagement"
            android:exported="false" />
        <activity
            android:name=".ui.MainView"
            android:exported="false" />
        <activity
            android:name=".ui.CenterView"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>